<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.car.view.CarActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        >
        <bwei.com.moni_demo.mvp.car.view.TitleView
            android:id="@+id/title_view"
            app:left_btn="加"
            app:right_btn="减"
            app:tv_title="购物车"
            android:layout_width="match_parent"
            android:layout_height="60dp"></bwei.com.moni_demo.mvp.car.view.TitleView>
        <ExpandableListView
            android:id="@+id/ex_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ExpandableListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/cart_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            />
        <TextView
            android:id="@+id/tv_cart_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="合计：￥0.00"
            />
        <Button
            android:id="@+id/btn_cart_pay"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="去结算（0）"
            />
    </LinearLayout>
</RelativeLayout>